/* pages/personal/personal.wxss */
.person-information{
  background-color: #1984d1;
}

.loading{
  width: 200rpx;
  height: 200rpx;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
}

.person-information .person-content{
  display: flex;
  padding: 40rpx 0;
  border-bottom: 1px solid  rgba(255, 255, 255, 0.15);

}

.person-content .person-l {
  padding-left: 40rpx
}

.person-l .person-photo{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.person-information .person-r{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-left: 30rpx;
}

.person-r .person-name{
  font-size: 16px;
  color: #fff;
}

.person-r .person-desc{
  font-size: 12px;
  color: #fff;
}

.person-information .person-active{
  font-size: 15px;
  width: 410rpx;
  display: flex;
  justify-content: space-between;
  margin: 0 auto
}

.person-active .person-collection{
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #fff
}

.person-active .person-follow{
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #fff
}