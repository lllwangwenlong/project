.read-active{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.read-active .btn{
  width:160rpx;
  height: 60rpx;
  font-size: 12px;
  color: #444;
  font-weight: 700;
  background: #f1f1f1
}