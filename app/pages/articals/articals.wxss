/* pages/articals/articals.wxss */
  @import '/static/iconfont/iconfont.wxss';

  .reading{
  width: 200rpx;
  height: 200rpx;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
}

.wemark{
  padding: 0 20rpx;
}

.menu{
  display: flex;
  justify-content: space-between;
  height: 100rpx;
  line-height: 100rpx;
  border-top: 1px solid #f1f1f1;
  z-index: 998;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background:#fff;
}

.menu .iconfont{
  font-size: 20px;
  flex: 1;
  text-align: center;
}

.menu .iconfont:active{
  background: #f1f1f1;
}

.catalog{
  position: fixed;
  top: 0;
  left: 0;
  bottom: 100rpx;
  width: 680rpx;
  z-index: 996;
  background: #fff;
  border: 1px solid #f1f1f1;
  transform: translate3d(-100% ,0 ,0);
  transition: transform .3s ease;
}

.active{
  transform: translate3d(0 ,0 ,0)
}

.catalog .catalog-item{
  font-size: 18px;
  color: #333;
  height: 70rpx;
  line-height: 70rpx;
  margin-left: 20rpx;
  border-bottom:2px solid #f1f1f1;
}

.catalog-item:active{
  background: #f1f1f1;
}

.mask{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 994;
  background:rgba(0, 0, 0, .2);
}