/* pages/details/details.wxss */
.details .book-detail{
  padding: 20rpx 20rpx 40rpx 20rpx;
  border-bottom: 4px solid #e9e9e9;
}

.deatil-t{
  display: flex;
  font-size: 12px;
  color: #444;
}

.deatil-t image{
  width: 220rpx;
  height: 280rpx;
}

.deatil-t .detail-r{
  margin-left: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.deatil-t .title{
  font-size: 14px;
  color: #333;
  font-weight: 700;
}

.detail-b{
  display: flex;
  justify-content: space-between;
  margin-top: 50rpx;
}

.detail-b .btn{
  margin: 0;
  width: 300rpx;
  font-size: 12px;
  color: #333;
  background-color: #e9e9e9;
  border: 1px solid #e9e9e9;
}

/* 简介 */
.book-desc{
  padding: 30rpx 20rpx;
  font-size: 12px;
  line-height: 1.5;
  border-bottom: 4px solid #e9e9e9;
}

.book-desc .desc-title{
  font-size: 16px;
  font-weight: 700;
}

.book-desc .desc-main{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:3;
  overflow: hidden;
  margin-top: 50rpx;
  color: #333;
}

.desc-view{
  margin-top: 50rpx;
  color: #333; 
}

/* 目录 */
.book-catalog{
  padding: 0 20rpx;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 4px solid #e9e9e9;
}

.book-catalog .catalog-l{
  width: 300rpx;
  display: flex;
  justify-content: space-between;
}

.catalog-l .title{
  font-size: 15px;
  font-weight: 700;
}

.catalog-l .catalogs{
  font-size: 12px;
  color: #444;
}

.update-time{
  font-size: 10px;
  color: #444;
}

.read-btn{
  padding: 10rpx;
}

.read-btn .btn{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  width: 710rpx;
  font-size: 16px;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  background-color: #409fff;
}